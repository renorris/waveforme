{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ES6",
        "lib": ["dom", "esnext"],
        "jsx": "react",
        "baseUrl": "./",
    }
}